<%= form_for @rental, html:{ class: 'form-horizontal'} do |f| %>
  <%= render 'shared/error_messages', object: @rental %>

  <div class="form-group">
    <label class="control-label col-sm-2">Name</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder:'e.g., Hotel', required: 'required' %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2">Daily Rate</label>
    <div class="col-sm-10">
      <%= f.number_field :daily_rate , class: 'form-control', placeholder:'e.g., 500',min: 1, required: 'required' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
