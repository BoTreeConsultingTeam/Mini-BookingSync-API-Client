<h2>Rentals Listing</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Daily Rate</th>
      <th colspan="3" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if @rentals.present? %>
      <% @rentals.each do |rental| %>
        <tr>
          <td><%= link_to rental.attributes[:name], rental_path(rental) %></td>
          <td><%= rental.attributes[:daily_rate] %></td>
          <td><%= link_to 'Book Now', new_rental_booking_path(rental) %></td>
          <% if params[:action] == 'index' %>
            <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
            <td><%= link_to 'Delete', rental_path(rental), method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
